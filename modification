$paths = "C:\Windows","C:\Program Files","C:\Program Files (x86)","C:\Users","C:\ProgramData"
foreach ($p in $paths) {
  if (Test-Path $p) {
    $size = (Get-ChildItem $p -Recurse -File -ErrorAction SilentlyContinue | Measure-Object Length -Sum).Sum
    "{0,-25} {1,8:N2} GB" -f $p, ($size/1GB)
  }
}