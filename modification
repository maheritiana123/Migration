private List<string> GetPrimaryKeyColumns(string tableName)
{
    var query = $@"
        SELECT COLUMN_NAME
        FROM INFORMATION_SCHEMA.KEY_COLUMN_USAGE
        WHERE TABLE_NAME = '{tableName}'
        AND OBJECTPROPERTY(OBJECT_ID(CONSTRAINT_NAME), 'IsPrimaryKey') = 1
        ORDER BY ORDINAL_POSITION
    ";

    var pkColumns = new List<string>();

    DynamicSql sql = new DynamicSql();
    sql.Dsn = "PXE1_PXE";
    sql.AddDirectRequest(query, MidwSqlXmlMode.MIDW_SQL_XMLMODE_RAW);
    sql.SetSite(Environment.GetEnvironmentVariable("PFTLSITE"));
    sql.Execute(30000);

    var rowCount = sql.ReturnedRows(1, 1);
    for (int i = 1; i <= rowCount; i++)
    {
        pkColumns.Add(sql.GetValueUsingColName(i, "COLUMN_NAME", 1, 1));
    }

    return pkColumns;
}
