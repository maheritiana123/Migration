/// <summary>
/// Sépare les tables en trois catégories :
/// 1. normalTables : toutes les tables “classiques”
/// 2. extendedRelations : tables relationnelles qui ont AU MOINS une FK + colonnes additionnelles
/// 3. pureRelations : tables relationnelles contenant UNIQUEMENT des FKs (ex : tables de jonction N-N)
/// </summary>
private void LoadRelationTables(
    List<string> allTables,
    out List<string> normalTables,
    out List<string> extendedRelations,
    out List<string> pureRelations)
{
    normalTables = new List<string>();
    extendedRelations = new List<string>();
    pureRelations = new List<string>();

    foreach (var table in allTables)
    {
        var fkInfos = GetForeignKeyInfo(table);
        var cols = GetTableColumns(table); // List<string> noms de colonnes
        var fkCols = new HashSet<string>(fkInfos.Select(f => f.ColumnName), StringComparer.OrdinalIgnoreCase);

        if (fkCols.Count == 0)
        {
            // Pas de FK => table normale
            normalTables.Add(table);
        }
        else if (fkCols.Count == cols.Count)
        {
            // Tous les champs sont des FK => pure relation (jonction)
            pureRelations.Add(table);
        }
        else
        {
            // Table relationnelle avec colonnes supplémentaires => étendue
            extendedRelations.Add(table);
        }
    }

    Console.WriteLine($"[LOAD] Normal tables      : {string.Join(", ", normalTables)}");
    Console.WriteLine($"[LOAD] Extended relations : {string.Join(", ", extendedRelations)}");
    Console.WriteLine($"[LOAD] Pure relations     : {string.Join(", ", pureRelations)}");
}